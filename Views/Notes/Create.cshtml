@model NoteProject.Models.Note
@{
    ViewData["Title"] = "ایجاد یادداشت";
}

<div class="container mt-4">
    <div class="card form-card mx-auto" style="max-width: 700px;">
        <div class="card-header">
            <h5 class="mb-0">ایجاد یادداشت جدید</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">عنوان</label>
                    <input asp-for="Title" class="form-control" placeholder="عنوان یادداشت را وارد کنید" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">متن</label>
                    <textarea asp-for="Content" class="form-control" rows="6" placeholder="متن یادداشت را وارد کنید"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">انصراف</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
