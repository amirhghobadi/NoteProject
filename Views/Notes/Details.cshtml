@model NoteProject.Models.Note
@{
    ViewData["Title"] = "جزئیات یادداشت";
}

<div class="container mt-4">
    <div class="card form-card mx-auto" style="max-width: 700px;">
        <div class="card-header">
            <h5 class="mb-0">@Model.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Html.Raw(Model.Content?.Replace("\n", "<br/>"))</p>
            <dl class="row mt-3">
                <dt class="col-sm-4">ایجاد شده در</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-4">آخرین ویرایش</dt>
                <dd class="col-sm-8">@Model.LastModified.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">ویرایش</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('آیا مطمئن هستید؟');">
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
        <div class="card-footer text-muted">
            برگشت به <a asp-controller="Notes" asp-action="Index">لیست یادداشت‌ها</a>
        </div>
    </div>
</div>
